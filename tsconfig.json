{
  "compilerOptions": {
    "module": "ESNext", // Gera módulos ES6
    "target": "ESNext", // Usando funcionalidades mais modernas
    "esModuleInterop": true, // Facilita a interoperabilidade entre ES e CommonJS
    "moduleResolution": "Node", // Usa a resolução de módulos no estilo Node.js
    "outDir": "dist", // Diretório de saída
    "resolveJsonModule": true, // Permite importar arquivos JSON
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "transform": "ts-transform-paths"
      }
    ]
  }
}